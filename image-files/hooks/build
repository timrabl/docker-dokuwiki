#!/bin/bash
# hooks/build
# https://docs.docker.com/docker-cloud/builds/advanced/

# $IMAGE_NAME var is injected into the build so the tag is correct.
echo "[***] Build hook running"

C1=$(echo ${DOCKER_TAG} | cut -d "-" -f 1)
C2=$(echo ${DOCKER_TAG} | cut -s -d "-" -f 2)
C3=$(echo ${DOCKER_TAG} | cut -s -d "-" -f 3)

if [ ! -z "${C1}" ]; then
    if [ "${C1}" == "latest" ]; then
        echo "[***] Set Version tag to: latest"
        FLAG_VERSION="--build-arg VERSION=latest"
    elif [ "${C1}" == "rc" ]; then
        echo "[***] Set Version tag to: release-candidate"
        FLAG_VERSION="--build-arg VERSION=release-candidate"
    else
        echo "[***] Invalid Tag: ${DOCKER_TAG}"
        FLAG_VERSION=""
    fi
fi

if [ ! -z "${C2}" ]; then
    if [ "${C2}" == "installer" ]; then
        echo "[***] Set second tag to: installer"
        FLAG_TWO="--build-arg INSTALLER=true"
    elif [ "${C2}" == "ldap" ]; then
        echo "[***] Set second tag to: ldap"
        FLAG_TWO="--build-arg LDAP=true"
    else
        echo "[***] Invalid Tag: ${DOCKER_TAG}"
        echo "[***] Failed while parsing second tag..."
        FLAG_TWO=""
    fi
fi

if [ ! -z "${C3}" ]; then
    if [ "${C2}" != "${C3}" ]; then
        if [ "${C3}" == "installer" ]; then
            echo "[***] Set third tag to: installer"
            FLAG_THREE="--build-arg INSTALLER=true"
        elif [ "${C3}" == "ldap" ]; then
            echo "[***] Set third tag to: ldap"
            FLAG_THREE="--build-arg LDAP=true"
        else
            echo "[***] Invalid Tag: ${DOCKER_TAG}"
            echo "Failed while parsing third tag..."
            FLAG_THREE=""
        fi
    fi
fi

docker build -t dokuwiki:${DOCKER_TAG} ${FLAG_VERSION} ${FLAG_TWO} ${FLAG_THREE} .
